{
  "name": "Deploy-VM-Monitoring",
  "type": "Microsoft.Authorization/policyAssignments",
  "apiVersion": "2019-09-01",
  "properties": {
    "description": "Enable Azure Monitor for the virtual machines (VMs) in the specified scope (management group, subscription or resource group). Takes Log Analytics workspace as parameter.",
    "displayName": "Enable Azure Monitor for VMs",
    "notScopes": [],
    "parameters": {
      "logAnalytics_1": {
        "value": "/subscriptions/${managementsubid}/resourcegroups/ap-rg-mgmt-${region_short}/providers/Microsoft.OperationalInsights/workspaces/ap-log-mgmt-${region_short}"
      }
    },
    "policyDefinitionId": "/providers/Microsoft.Authorization/policySetDefinitions/55f3eceb-5573-4f18-9695-226972c6d74a",
    "scope": "${current_scope_resource_id}",
    "enforcementMode": null
  },
  "location": "${default_location}",
  "identity": {
    "type": "SystemAssigned"
  }
}